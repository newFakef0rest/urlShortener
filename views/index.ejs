<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <h1 class="text-center">URL Shrinker</h1>
          <form action="/shortUrls" method="POST">
            <div class="mb-3">
              <label for="fullUrl" class="form-label">URL:</label>
              <input
                type="text"
                class="form-control"
                id="fullUrl"
                name="fullUrl"
              />
            </div>
            <button type="submit" class="btn btn-primary">Shrink</button>
          </form>

          <table class="table mt-4">
            <thead>
              <tr>
                <th>Full URL</th>
                <th>Short URL</th>
                <th>Clicks</th>
              </tr>
            </thead>
            <tbody>
              <!-- Add table rows dynamically here -->
              <% shortUrls.forEach(shortUrl => { %>
              <tr>
                <td><%= shortUrl.full %></td>
                <td>
                  <a href="<%= shortUrl.short %>"><%= shortUrl.short %></a>
                </td>
                <td><%= shortUrl.clicks %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
